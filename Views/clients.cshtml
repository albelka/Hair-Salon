@{
  Layout = "Shared/_Layout.cshtml";
}
@if (@Model.Count == 0)
{
  <p>No clients have been added yet.</p>
}
else{
  <h1> Here is your list of clients: </h1>
  <ul>
  @foreach (var client in Model)
  {
    <li><h3>@client.Name <h4>  <a href="/client/edit/@client.Id">Edit<a/> |<a href="/client/delete/@client.Id">Delete<a/></h4></li>
  }
  </ul>
  <br>
  <form action="/clients/delete" method ="post">
    <button type="submit">Clear all clients</button>
    </form>
}
<br>
<p><a href="/client/new">Add a new client</a></p>
<p><a href="/">Return home</a></p>
