<!DOCTYPE html>
<html>
  <head>
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="/Content/css/styles.css" rel="stylesheet" type="text/css">
    <title>My Hair Salon</title>
  </head>
  <body>
    <div class="jumbotron">
      <h1>My Hair Salon</h1>
    </div>
    <div class="container">
      <h2>Stylists</h2><br>

      @if(@Model.Count == 0)
      {
        <h3>No Stylists have been added yet!</h3>
      }
      <ul>
        @foreach(var stylist in Model)
        {
          <li><h3><a href='/stylists/@stylist.Id'>@stylist.Name</a></h3></li>
        }
      </ul><br>

      <h5><a href="/stylists/new">Add new stylist</a></h5><br>
      <h5><a href="/">Home</a></h5><br>
    </div>
  </body>
</html>
