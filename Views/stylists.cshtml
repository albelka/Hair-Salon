@{
  Layout = "Shared/_Layout.cshtml";
}
      <h2>Stylists</h2><br>

      @if(@Model.Count == 0)
      {
        <h3>No Stylists have been added yet!</h3>
      }
      <ul>
        @foreach(var stylist in Model)
        {
          <li><h3><a href='/stylists/@stylist.Id'>@stylist.Name</a> <h4>Availability: @stylist.Availability</h4> | <a href="/stylist/edit/@stylist.Id">Edit</a> | <a href="/stylist/delete/@stylist.Id">Delete<a/></h3></li>
        }
      </ul><br>

      <h5><a href="/stylists/new">Add new stylist</a></h5>
      <h5><a href="/">Return home</a></h5><br>
