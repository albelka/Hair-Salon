<h1>My Hair Salon</h1>
<hr />
<h2>Edit stylist: @Model.Name</h2>
<form action="/stylist/edit/@Model.Id" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <input name="stylist-id" type="hidden" value="@Model.Id">
  <label for="stylist-name">Stylist name</label>
  <input id="stylist-name" name="stylist-name" type="text">
  <button type="submit">Submit</button>
</form>
<h4><a href="/">Return home</a></h4>
